<aura:component implements="flexipage:availableForAllPageTypes" access="global" >
    <aura:attribute name="greeting" type="String" default="Hello World" />

    <lightning:card footer="Hello World Footer" title="{!v.greeting}">
        <p class="slds-p-horizontal_small">
            This is my first aura component - {!v.greeting}
            <!-- Success variant: Identifies a successful action -->
    		<lightning:button variant="success" label="Success" title="Success"/>
        </p>
    </lightning:card>
</aura:component>